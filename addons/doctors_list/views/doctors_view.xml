<odoo>
    <record id="doctors_form" model="ir.ui.view">
        <field name="name">doctors.form</field>
        <field name="model">doctors</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="gender"/>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="birthday"/>
                        <field name="age"/>
                    </group>
                    <group>
                        <field name="mobile"/>
                        <field name="account"/>
                        <field name="speciality"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="doctors_list" model="ir.ui.view">
        <field name="name">doctors.list</field>
        <field name="model">doctors</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="account"/>
                <field name="speciality"/>
                <field name="mobile"/>
            </list>
        </field>
    </record>

    <record id="doctors_action" model="ir.actions.act_window">
        <field name="name">Doctors list</field>
        <field name="res_model">doctors</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="doctors_main"
              name="Doctors"
              sequence="50"/>
    <menuitem id="doctors_list_sub"
              name="Doctors list"
              action="doctors_action"
              parent="doctors_main"
              sequence="50"/>

</odoo>