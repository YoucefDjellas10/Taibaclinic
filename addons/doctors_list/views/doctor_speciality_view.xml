<odoo>
    <record id="doctor_speciality_form" model="ir.ui.view">
        <field name="name">doctor.speciality.form</field>
        <field name="model">doctor.speciality</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>
    <record id="doctor_speciality_list" model="ir.ui.view">
        <field name="name">doctor.speciality.list</field>
        <field name="model">doctor.speciality</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="doctor_speciality_action" model="ir.actions.act_window">
        <field name="name">Doctor speciality</field>
        <field name="res_model">doctor.speciality</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="doctor_speciality_sub"
              name="Doctor Speciality"
              parent="doctors_main"
              action="doctor_speciality_action"
              sequence="90"/>


</odoo>