<odoo>
    <record id="quotations_form" model="ir.ui.view">
        <field name="name">quotations.form</field>
        <field name="model">quotations</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="patient"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="medical_histiory" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="quotation_date"/>
                            <field name="expiration_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="quotation_treatment_ids" colspan="4">
                                <list editable="bottom">
                                    <field name="treatment"/>
                                    <field name="teeth" widget="many2many_tags"/>
                                    <field name="quantity" />
                                    <field name="currency" optional="hide"/>
                                    <field name="price"/>
                                    <field name="total"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="quotations_list" model="ir.ui.view">
        <field name="name">quotations.list</field>
        <field name="model">quotations</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="patient"/>
                <field name="quotation_date"/>
                <field name="expiration_date"/>
                <field name="stage"/>
            </list>
        </field>
    </record>

    <record id="quotations_list_action" model="ir.actions.act_window">
        <field name="name">Quotations list</field>
        <field name="res_model">quotations</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="quotations_list_sub"
              name="Quotations"
              parent="patient_list_main"
              action="quotations_list_action"
              sequence="50"/>


</odoo>