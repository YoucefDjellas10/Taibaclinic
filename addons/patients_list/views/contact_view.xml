<odoo>
    <record id="contact_record_form" model="ir.ui.view">
        <field name="name">contact.record.form</field>
        <field name="model">contact.record</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="patient"/>
                    <field name="type"/>
                    <field name="report"/>
                </group>
            </form>
        </field>
    </record>
    <record id="contact_record_list" model="ir.ui.view">
        <field name="name">contact.record.list</field>
        <field name="model">contact.record</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="patient"/>
                <field name="type" widget="badge"/>
                <field name="report"/>
            </list>
        </field>
    </record>

    <record id="contact_record_action" model="ir.actions.act_window">
        <field name="name">Contact list</field>
        <field name="res_model">contact.record</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="contact_record_sub"
              name="Contact list"
              parent="patient_list_main"
              action="contact_record_action"
              sequence="110"/>


</odoo>