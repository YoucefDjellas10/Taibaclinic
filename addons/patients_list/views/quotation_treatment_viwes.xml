<odoo>
    <record id="quotations_treatment_form" model="ir.ui.view">
        <field name="name">quotations.treatment.form</field>
        <field name="model">quotations.treatment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="quotation"/>
                        <field name="treatment"/>
                        <field name="teeth" widget="many2many_tags"/>
                        <field name="quantity"/>
                        <field name="currency" invisible="1"/>
                        <field name="price"/>
                        <field name="total"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="quotations_treatment_list" model="ir.ui.view">
        <field name="name">quotations.treatment.list</field>
        <field name="model">quotations.treatment</field>
        <field name="arch" type="xml">
            <list>
                <field name="treatment"/>
                <field name="teeth" widget="many2many_tags"/>
                <field name="quantity"/>
                <field name="currency" optional="hide"/>
                <field name="price"/>
                <field name="total"/>
            </list>
        </field>
    </record>

    <record id="quotations_treatment_list_action" model="ir.actions.act_window">
        <field name="name">Quotations treatment</field>
        <field name="res_model">quotations.treatment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="quotations_treatment_list_sub"
              name="Quotations treatment"
              parent="patient_list_main"
              action="quotations_treatment_list_action"
              sequence="70"/>


</odoo>