<odoo>
    <record id="cities_records_form" model="ir.ui.view">
        <field name="name">cities.records.form</field>
        <field name="model">cities.records</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="country"/>

                </group>
            </form>
        </field>
    </record>
    <record id="cities_records_list" model="ir.ui.view">
        <field name="name">cities.records.list</field>
        <field name="model">cities.records</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="country"/>
            </list>
        </field>
    </record>

    <record id="cities_records_action" model="ir.actions.act_window">
        <field name="name">Cities list</field>
        <field name="res_model">cities.records</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="cities_records_sub"
              name="Cities"
              parent="patient_list_main"
              action="cities_records_action"
              sequence="100"/>


</odoo>