<odoo>
    <record id="treatment_plan_form" model="ir.ui.view">
        <field name="name">treatment.plan.form</field>
        <field name="model">treatment.plan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="patient"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="medical_histiory" widget="many2many_tags"/>

                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="deal_date"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <header>

                            </header>
                            <field name="lines_ids">
                                <list editable="bottom">
                                    <field name="treatment"/>
                                    <field name="teeth" widget="many2many_tags"/>
                                    <field name="quantity"/>
                                    <field name="currency" optional="hide"/>
                                    <field name="price"/>
                                    <field name="total"/>
                                </list>
                            </field>
                            <group>
                                <group>
                                </group>
                                <group>
                                    <group>
                                    </group>
                                    <group>
                                        <field name="gross_total"/>
                                        <field name="discount"/>
                                        <field name="net_total"/>
                                    </group>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="treatment_plan_list" model="ir.ui.view">
        <field name="name">treatment.plan.list</field>
        <field name="model">treatment.plan</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="patient"/>
                <field name="create_date"/>
                <field name="deal_date"/>
                <field name="net_total"/>
                <field name="currency" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="treatment_plan_list_action" model="ir.actions.act_window">
        <field name="name">Treatments plan list</field>
        <field name="res_model">treatment.plan</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="treatment_plan_list_main"
              name="Deals"
              sequence="50"/>
